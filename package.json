{
  "name": "maxbit-test",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "start": "node .output/server/index.mjs",
    "preview": "nuxt preview",
    "build:spa": "cross-env NUXT_SSR=false nuxt build",
    "preview:spa": "npx serve .output/public -l 4173",
    "generate": "nuxt generate",
    "typecheck": "vue-tsc --noEmit -p tsconfig.json",
    "lint:eslint": "eslint .",
    "lint:style": "stylelint \"app/**/*.{css,postcss,vue}\" --allow-empty-input",
    "lint": "pnpm lint:eslint && pnpm lint:style",
    "lint-staged": "lint-staged",
    "fix:eslint": "eslint . --fix",
    "fix:style": "stylelint \"app/**/*.{css,postcss,vue}\" --fix --allow-empty-input",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "fix": "pnpm fix:eslint && pnpm fix:style && pnpm format",
    "check": "pnpm typecheck && pnpm lint && pnpm format:check",
    "postinstall": "nuxt prepare",
    "prepare": "husky",
    "build:gh": "cross-env NUXT_SSR=false API_MODE=mock NUXT_APP_BASE_URL=/maxbit-cinema-test/ nuxt build"
  },
  "dependencies": {
    "@nuxt/fonts": "0.11.4",
    "@nuxt/icon": "2.0.0",
    "@nuxt/image": "1.11.0",
    "@pinia/nuxt": "^0.11.2",
    "nuxt": "^4.1.3",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.7.2",
    "@vitest/ui": "^4.0.6",
    "@volar/vue-language-server": "1.6.5",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-vue": "^10.5.1",
    "execa": "^9.6.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.0",
    "postcss-nesting": "^13.0.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^3.4.18",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "3.1.1"
  },
  "lint-staged": {
    "**/*.{js,ts,vue}": [
      "pnpm exec eslint --config ./eslint.config.mjs --fix",
      "pnpm exec prettier -w"
    ],
    "app/**/*.{css,postcss,vue}": [
      "pnpm exec stylelint --fix --allow-empty-input",
      "pnpm exec prettier -w"
    ],
    "*.{json,md,yml,yaml}": [
      "pnpm exec prettier -w"
    ]
  }
}
